@{
    ViewData["Title"] = "Livros Reservados";
}

<h1>Livros Reservados</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nome do Usuário</th>
            <th>Nome do Livro</th>
            <th>Data da Reserva</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in ViewBag.Reservas)
        {
            <tr>
                <td>@reserva.UsuarioNome</td>
                <td>@reserva.LivroNome</td>
                <td>@reserva.DtReserva.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Livro" asp-action="Retirar" asp-route-id="@reserva.LivroID">Retirar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
